@model Product

<div class="col">
    <div class="card shadow-sm">
        <img src="@Model.img" class="bd-placeholder-img card-img-top" width="100%" height="225" style="object-fit:cover;" alt="...">
    <div class="card-body">
        <h3 class="card-text text-center">@Model.name</h3>
        <small class="card-text text-center">@Model.shortDesc</small>
        <div class="d-flex justify-content-center align-items-center mt-2">
        <div class="btn-group">
            <button type="button" class="btn btn-outline-secondary">Подробнее</button>

            <button type="submit" class="btn btn-outline-secondary" onclick="addToCart(@Model.id);">В корзину</button>

                    
        </div>
        </div>
    </div>
    </div>
</div>